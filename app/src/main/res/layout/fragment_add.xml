<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_16dp"
    tools:context=".fragments.add.AddFragment">

    <EditText
        android:layout_width="0dp"
        android:layout_height="@dimen/_60dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:hint="@string/txt_title"
        android:inputType="textPersonName"
        android:paddingStart="@dimen/_24dp"
        android:paddingEnd="@dimen/_24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:id="@+id/et_title"/>

    <Spinner
        android:layout_width="0dp"
        android:layout_height="@dimen/_60dp"
        android:entries="@array/priorities"
        android:paddingStart="@dimen/_20dp"
        android:paddingEnd="@dimen/_20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_title"
        android:id="@+id/sp_priorities"/>

    <EditText
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_8dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:hint="@string/txt_dsc"
        android:paddingStart="@dimen/_24dp"
        android:paddingEnd="@dimen/_24dp"
        android:paddingTop="@dimen/_24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sp_priorities"
        android:id="@+id/et_desc"/>


</androidx.constraintlayout.widget.ConstraintLayout>